.login-image {
  height: 16px !important;
  width: 16px !important;
  position: absolute !important;
  top: 7px !important;
}

div.sgi-auto-form {

  .radio input[type="radio"]{
    width: auto !important;
  }

  div.radio-group {
    width: 100% !important;
    input {
      margin-right: 5px !important;
    }
    label {
      padding-right: 10px !important;
    }
  }

  .input-group {
    width: 100% !important;
    border-radius: 4px !important;

    input {
      &:focus {
        background-color: inherit;
      }
      &.ng-invalid{
        background-color: lightpink;
      }
    }
  }

  .form-group {
    width: 100% !important;
    margin-bottom: 15px !important;
    &.inline {
      .input-group-addon {
        padding-right: 21px;
        padding-top: 8px;
      }
    }
  }

  fieldset {
    padding: 0px 14px 14px 14px !important;
    border: 1px solid #2DCC70 !important;
    background: #ECFFEF !important;
    padding: 10px !important;

    legend {
      padding: 2px 4px !important;
      margin-left: 8px !important;
      margin-right: 8px !important;
      width: auto !important;
      border: 1px solid #2DCC70 !important;
      background: #C0F3C0 !important;
      color: #268D51 !important;
      // font-weight: 700 !important;
      font-size: 18px !important;
    }

    label {
      color: #268D51 !important;
      // font-weight: 700 !important;
    }

    div.vertical {
      div {
        display: block !important;
      }
    }

    input, textarea, .uneditable-input {
      width: 100% !important;
      box-sizing: border-box !important;
      height: auto !important;
    }

    .radio-group {
      padding: 3px 4px 8px 11px !important;
      border: solid 2px rgba(179, 179, 179, 0.85) !important;
      background-color: #ffffff !important;
      border-radius: 4px !important;
      -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075) !important;
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075) !important;
      -webkit-transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s !important;
      transition: border-color ease-in-out 0.15s, box-shadow ease-in-out 0.15s !important;

      .radio {
        label {
          font-weight: normal !important;
        }
      }
    }

    div.focus {
      border-color: rgba(82, 168, 236, 0.8) !important;
      outline: 0 !important;
      outline: thin dotted \9 !important;
      -webkit-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6) !important;
      -moz-box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6) !important;
      box-shadow: inset 0 1px 1px rgba(0, 0, 0, 0.075), 0 0 8px rgba(82, 168, 236, 0.6) !important;
    }

    fieldset {
      border: 1px solid #deded8 !important;
      background: #f7fff7 !important;
      padding: 0px 14px 14px 14px !important;
      margin: 0px 10px 10px 10px !important;

      legend {
        padding: 0px 4px 0px 4px !important;
        margin-left: -1px !important;
        margin-right: 0px !important;
        width: auto !important;
        border: 1px solid #deded8 !important;
        background: #ECFFEF !important;
        color: #268D51 !important;
        font-weight: 500 !important;
        font-size: 16px !important;
      }
    }

    .checkbox input[type="checkbox"] {
      margin-top: 0px !important;
      margin-bottom: 0px !important;
      vertical-align: middle !important;
      margin-right: 2px !important;
      width: auto !important;
    }

  }


  .form-inline select.form-control {
    width: 100% !important;
    &.ng-invalid {
      background-color: lightpink;
    }
  }

  .daterangepicker .ranges .input-mini {
    width: 80px !important;
  }

  .daterangepicker .ranges {
    width: 178px !important;
  }

  div.sgi-inline-flex {
    display: inline-flex !important;
    width: auto !important;
  }

  div.inline {
    display: inline-flex !important;
    width: auto !important;
    margin-right: 10px !important;
    div {
      display: inline-flex !important;
      width: auto !important;
    }

    fieldset div.inline {
      margin-right: 10px !important;
      div.input-group {
        width: auto !important;
        display: inline-flex !important;
        input {
          width: auto !important;
        }
      }

      div.sgi-inline-flex {
        display: inline-flex !important;
      }
    }
  }

  div#xxx {
    width: 100% !important;
    padding-left: 445px !important;
  }

  .sgi-new-model {
    margin-top: 50px !important;
  }

  .sgi-collection-field {

    .copy-width.narrow {
      margin-bottom: 0px !important;
    }

    hr {
      position: relative !important;
    }

    .sgi-collection-selection-list {
      border: 2px solid #C0F3C0;
      padding: 5px;
    }

    .collection-selection-row {
      cursor: pointer !important;
      willdth: 100%;
     // dikksplay: inline-table;

      div {
        padding: 0px 2px 2px 2px;
        border: 2px solid transparent !important;

        &.selected {
          border: 2px solid #2DCC70 !important;
          padding: 0px 2px 2px 2px;
        }

        &.invalid {
          border: 2px solid red !important;
          padding: 0px 2px 2px 2px;
        }

        &.sgi-collection-selection-item-row{
          position: relative;
          height: 30px;
        }

        &.sgi-collection-selection-item-remove-button{
          font-weight: bold;
          color: darkred;
          border: 2px solid darkred;
          position: absolute !important;
          float: none;
          padding: 4px;
          right: -1.5px;
          top: -1.5px;
          margin: 0px;
          height: 29.5px;
        }
      }

      &:nth-child(odd) {
        background: #ECFFEF !important;
      }
    }

    ng-form .copy-width.narrow.ng-scope {
      margin: 0px !important;
    }

    .sgi-collection-add-button {
      button {
        border: none !important;
        background: none !important;
        padding: 0px 4px 0px 0px !important;
        font-size: larger;
      }
      float: right !important;
      margin-right: -15px !important;
      margin-top: -10px !important;
    }

    margin-top: 35px !important;

    fieldset {
      padding-top: 10px !important;
      legend {
        font-size: 14px !important;
        margin-left: -25px !important;
        border: none !important;
        margin-top: -41px !important;
        position: absolute !important;
        font-weight: bold !important;
      }
    }
  }
}